<% include ./partials/headerLandingLoginRegister %>
       <main> 
        <section class="form-container background-forgot-restore">
        <article class="form-wrapper">
                    <form action="/reset/<%= token %>" method="POST">
                            <h1 class="formTitle">New password</h1>
                            <% include ./partials/flashMessages %>
                            <label for="new_password">New password</label>
                            <input id="new_password" class="input" type="password" name="password" placeholder="new password">

                            <label for="confirm_password">Confirm password</label>
                            <input id="confirm_password" class="input" type="password" name="confirm" placeholder="confirm new password">
                            
                            <button type="submit">Enter</button>
                        </form>
                    </article>
                </section>
               </main>
               <% include ./partials/footerLandingLoginRegister %>