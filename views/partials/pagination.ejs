<section class="main-container">
<div class="pagination">
    <% if (pages && pages > 0) { %>
        <% if (current == 1) { %>
        <a>First</a>
        <% } else { %>
        <a href="/search<%if(search){%>?search=<%=search%><%}%>">First</a>
        <% } %>
 
        <% if (current == 1) { %>
        <a>«</a>
        <% } else { %>
        <a href="/search?page=<%= Number(current) - 1 %><%if(search){%>&search=<%=search%><%}%>">«</a>
        <% } %>
 
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        <% if (i !== 1) { %>
        <a>...</a>
        <% } %>
        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
        <% if (i == current) { %>
        <a class="active"><%= i %></a>
        <% } else { %>
        <a href="/search?page=<%= i %><%if(search){%>&search=<%=search%><%}%>"><%= i %></a>
        <% } %>
        <% if (i == Number(current) + 4 && i < pages) { %>
        <a>...</a>
        <% } %>
        <% } %>
 
        <% if (current == pages) { %>
        <a>»</a>
        <% } else { %>
        <a href="/search?page=<%= Number(current) + 1 %><%if(search){%>&search=<%=search%><%}%>">»</a>
        <% } %>
 
        <% if (current == pages) { %>
        <a>Last</a>
        <% } else { %>
        <a href="/search?page=<%= pages %><%if(search){%>&search=<%=search%><%}%>">Last</a>
        <% } %>
    <% } %>
</div>
</section>